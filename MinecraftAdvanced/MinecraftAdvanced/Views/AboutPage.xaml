<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MinecraftAdvanced.Views.AboutPage"
             xmlns:vm="clr-namespace:MinecraftAdvanced.ViewModels"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="WidthRequest" Value="130"/>
            <Setter Property="HeightRequest" Value="50"/>
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
            <CarouselView ItemsSource="{Binding Buildings}" HeightRequest="150">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Image Source="{Binding Image}" 
                               Aspect="AspectFill" />
                        </StackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
                <ScrollView Orientation="Horizontal" >
                    <StackLayout >
                        <StackLayout Orientation="Horizontal">
                            <Button Text = "Карты" BackgroundColor="#4DAAF4"/>
                            <Button Text = "Аддоны" BackgroundColor="#FFC018"/>
                            <Button Text = "Текстуры" BackgroundColor="#7A4DCF"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Button Text = "Постройки" BackgroundColor="#F25E9F"/>
                            <Button Text = "Скины" BackgroundColor="#F78C39"/>
                            <Button Text = "Сиды" BackgroundColor="#C0775B"/>
                        </StackLayout>
                    </StackLayout>
                </ScrollView>
                <StackLayout>
                    <ContentView HorizontalOptions="FillAndExpand">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Топ карты" Padding="5"/>
                            <Label Text="Смотреть все" HorizontalOptions="EndAndExpand" Padding="5" TextColor="#5AA660"/>
                        </StackLayout>
                    </ContentView>
                    <ScrollView Orientation="Horizontal">
                        <FlexLayout x:Name="MapsLayout"/>
                    </ScrollView>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>